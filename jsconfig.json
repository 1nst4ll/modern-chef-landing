{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@contexts/*": ["contexts/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}